// let da pra mudar
// const nao da pra mudar


let my_string = "Hello world" // string
let my_number = "15" // string
let my_second_number = 15 // number
let my_array = ["15", "numero"] // guarda mt valores
let my_boolean = true; //true ou false
let my_obj = { // guarda key-values em pares pares
    name: "Marcelo Augusto",
    aim: "learning js",
    age: 20,
}


document.querySelector("#id") //serve pra selecionar elementos com base no id
getElementsByClassName // seleciona tudo que tem aquela msm classe ex: "btn"
getElementById // seleciona o PRIMEIRO elemento com aquele ID
innerText // é pra modificar texto de algum elemento
getElementByTagName // pega todos os (algo) do html

break // pra quebrar loop

forEach(): Executa a função fornecida em cada elemento do array, mas não retorna um novo array
map(): Executa a função fornecida em cada elemento do array e retorna um novo array com os resultados. Usado quando você precisa transformar os elementos de um array em um novo array.


addEventListener()
EVENT	//DESCRIPTION
click	//When a user clicks an element, this event is triggered.
mouseover	//Hovering over elements in the DOM causes this event to be triggered.
input	//When the value of an input or select element changes, this event is fired.
submit	//When a form is submitted, this event is triggered
keydown	//When a keyboard key is pushed, the keydown event is triggered.
Keyup	//Fired when a pushed key is released. It is the opposite of Keydown.
DOMContentLoaded	//This event is fired when the DOM has loaded, but this event is fired before any external resource(like css and images) is downloaded.
load	//On the other hand, this event won't be triggered until all DOM elements, including external resources, have loaded.